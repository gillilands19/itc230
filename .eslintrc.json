{
    "env": {
		"node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		"prefer-arrow-callback": "warn",
		
		"no-var": "warn",
		
		"no-console": "warn"
    }
}