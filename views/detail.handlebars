{{!-- checks to see which page we're on and delivers proper content --}}
{{#if searchAction}}

<h2>Search Results</h2>

	{{#if searchResults}}
		{{#each searchResults}}
			Band Found: {{name}}, Years Active: {{yearsActive}}, Genre: {{genre}}
			<form>
				<button type="submit" formaction="/delete" formmethod="post" name="name" value="{{name}}">Delete</button>
			</form>
			<br>
		{{/each}}

    {{else}}
		Band Not Found
<br>
	{{/if}}

{{/if}}

{{#if addAction}}

	{{#if addResults}}
		{{addResults.name}} added, Thanks!
<br>
	{{else}}
		Band already exists, please add a different band.
<br>
	{{/if}}

{{/if}}

{{#if deleteAction}}

	{{#if deleteResults}}
		{{deleteResults}}
<br>
	{{/if}}

{{/if}}